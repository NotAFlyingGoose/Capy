
libc :: import "libc.capy";
ptr :: import "ptr.capy";
math :: import "math.capy";
meta :: import "meta.capy";

print :: (str: string) {
    str := str as ^char;
    i := 0;
    loop {
        ch := ptr.read(str, i) as char;
        if ch == '\0' {
            break;
        }

        libc.putchar(ch);

        i = i + 1;
    }
}

println :: (str: string) {
    libc.puts(str);
}
