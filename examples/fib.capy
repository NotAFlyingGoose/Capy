
core :: mod "core";

target :: 28;
repeat :: 5;
answer :: 317811;

fib :: (n: i32) -> i32 {
    if n <= 1 {
        n
    } else {
        fib(n - 1) + fib(n - 2)
    }
}

main :: () {
    io :: import "io.capy";
    
    core.println("Running Fibonacci #", target);
    core.println("Ready... Go!");

    result := fib(target);

    core.println("Fibonacci number #", target, " = ", result);

    if result != answer {
        core.println("The answer is WRONG! Should be ", answer);
    }
}
